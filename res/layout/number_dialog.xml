<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px" >

    <Button
        android:id="@+id/btnDot"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_alignParentTop="true"
        android:text="." />

    <EditText
        android:id="@+id/txtDisplay"
        android:layout_width="188px"
        android:layout_height="63px"
        android:layout_toRightOf="@id/btnDot"
        android:focusable="false"
        android:padding="2dp"
        android:text=""
        android:gravity="center" />

    <Button
        android:id="@+id/btnOne"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/txtDisplay"
        android:text="1" />

    <Button
        android:id="@+id/btnTwo"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/txtDisplay"
        android:layout_toRightOf="@id/btnOne"
        android:text="1" />

    <Button
        android:id="@+id/btnThree"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/txtDisplay"
        android:layout_toRightOf="@id/btnTwo"
        android:text="3" />

    <Button
        android:id="@+id/btnFour"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/txtDisplay"
        android:layout_toRightOf="@id/btnThree"
        android:text="4" />

    <Button
        android:id="@+id/btnFive"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnOne"
        android:text="5" />

    <Button
        android:id="@+id/btnSix"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnOne"
        android:layout_toRightOf="@id/btnFive"
        android:text="6" />

    <Button
        android:id="@+id/btnSeven"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnOne"
        android:layout_toRightOf="@id/btnSix"
        android:text="7" />

    <Button
        android:id="@+id/btnEight"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnOne"
        android:layout_toRightOf="@id/btnSeven"
        android:text="8" />

    <Button
        android:id="@+id/btnNine"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnFive"
        android:text="9" />

    <Button
        android:id="@+id/btnZero"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnFive"
        android:layout_toRightOf="@id/btnNine"
        android:text="0" />

    <Button
        android:id="@+id/btnChange"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnFive"
        android:layout_toRightOf="@id/btnZero"
        android:text="更正" />

    <Button
        android:id="@+id/btnOk"
        style="@style/NumberButtonText"
        android:layout_width="63px"
        android:layout_height="63px"
        android:layout_below="@id/btnFive"
        android:layout_toRightOf="@id/btnChange"
        android:text="确定" />

</RelativeLayout>